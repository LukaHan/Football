<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlyt_title"
        style="@style/titleView">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/titleViewBack"
            android:background="?android:selectableItemBackgroundBorderless"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/titleViewText" />

        <ImageView
            android:id="@+id/ivMore"
            android:scaleType="center"
            style="@style/titleViewRightImage"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/icon_back_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivMoreSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ivMore"
            android:background="?android:selectableItemBackgroundBorderless"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="center"
            android:src="@drawable/icon_back_white"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvMore"
            style="@style/titleViewRightImageText"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        layout="@layout/layout_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rlyt_title" />
</RelativeLayout>